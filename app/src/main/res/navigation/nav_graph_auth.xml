<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.tournamentmaker.authactivity.authfragments.ui.auth.AuthFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_auth_screen" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.tournamentmaker.authactivity.authfragments.ui.register.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register_user" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.tournamentmaker.authactivity.authfragments.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login_user" >
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.tournamentmaker.authactivity.authfragments.ui.forgotpassword.ForgotPasswordFragment"
        android:label="Forgot Password"
        tools:layout="@layout/fragment_forgot_password" />
    <action
        android:id="@+id/action_global_registerFragment"
        app:destination="@id/registerFragment"
        app:popUpTo="@id/loginFragment"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/registerFragment"
        app:popUpToInclusive="true" />
</navigation>